link(rel="import" href="../../../bower_components/polymer/polymer.html")
link(rel="import" href="../task/task.html")

script(src="../../../vendor/lodash.js")

dom-module(id="dg-tasklist")
    template
        h2 The Task List
        label(for="taskInput") Add a Task
        input(type="text", name="taskInput", id="taskInput" value="{{taskname::input}}")
        button(on-click="addTask") add

        ul
            template(is="dom-repeat" items="{{tasks}}")
                li(is="dg-task" id="[[item.id]]" name="[[item.name]]", priority="{{item.priority}}", status="{{item.status}}")

    script
        include:babel ./tasklist.js
